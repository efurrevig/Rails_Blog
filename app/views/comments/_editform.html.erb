<%= form_with model: [article, comment] do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.label :color %><br>
    <%= form.text_area :color %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
